<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%=link_to user.followings.count, follower_user_path(user.id) %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%=link_to user.followers.count, followerd_user_path(user.id) %></th>
  </tr>
</table>
　
<div class='row'>
  <% if current_user != user %>
    <% if user.followed_by?(current_user) %>
      <%=link_to "フォロー外す", user_relationships_path(user.id), method: :delete ,class: "btn btn-secondary" %>
    <% else %>
      <%=link_to "フォローする", user_relationships_path(user.id), method: :post ,class: "btn btn-primary"%>
    <% end %>
    <% else %>
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>
