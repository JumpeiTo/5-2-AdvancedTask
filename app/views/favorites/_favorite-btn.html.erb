<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book_id: book.id), method: :delete, class: "btn p-0 text-danger" ,remote: true do %>
     ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book_id: book.id), method: :post, class: "btn p-0 text-primary",remote: true do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>