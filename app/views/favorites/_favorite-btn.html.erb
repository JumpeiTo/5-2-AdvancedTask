<% if book.favorited_by?(current_user) %>
  <div class="btn p-0">
    <%= link_to book_favorites_path(book_id: book.id), method: :delete, class: "text-danger" do %>
       ♥<%= book.favorites.count %>
    <% end %>
  </div>
<% else %>
  <%= link_to book_favorites_path(book_id: book.id), method: :post, class: "btn p-0 text-primary" do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>